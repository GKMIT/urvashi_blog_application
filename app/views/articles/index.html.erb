<h1>Listing Articles</h1>
<table>
	<tr>
		<th>Title
		</th>
		<th>
			Text
		</th>
	</tr>
	<% @articles.each do |article|%>
		<tr>

			<td>
				<%= article.title%>
			</td>
			<td>
				<%= article.text%>
			</td>
			<td colspan="2">
				<%= link_to 'Show', article_path(article) %>
			</td>
			<td colspan="2">
				<%= link_to 'New Article', new_article_path %>
			</td>
			<td colspan="2">
				<%= link_to 'Edit', edit_article_path(article) %>
			</td>
			<td colspan="2">
				<%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Do you want to destroy this record?' } %>
			</td>
		</tr>

	<%end%>
</table>